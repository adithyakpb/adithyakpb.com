---
import Icon from './ui/Icon.astro';

const socialLinks = [
  { href: 'https://github.com/adithyakpb', icon: 'github', label: 'GitHub' },
  { href: 'https://linkedin.com/in/adithyakpb', icon: 'linkedin', label: 'LinkedIn' },
  { href: 'mailto:adithyakpb@gmail.com', icon: 'mail', label: 'Email' },
  { href: 'https://signalandnoise.blog', icon: 'blog', label: 'Blog' },
];

const currentYear = new Date().getFullYear();
---

<footer id="contact" class="bg-surface border-t border-border">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center">
      <h2 class="text-2xl font-bold text-text mb-2">Get in Touch</h2>
      <p class="text-text-muted mb-8">Have a question or want to work together? Reach out via any of these channels.</p>

      <div class="flex justify-center gap-4 mb-6">
        {socialLinks.map(({ href, icon, label }) => (
          <a
            href={href}
            target={href.startsWith('mailto:') ? undefined : '_blank'}
            rel={href.startsWith('mailto:') ? undefined : 'noopener noreferrer'}
            class="flex items-center gap-2 px-4 py-2.5 rounded-lg bg-card border border-border text-text-muted hover:text-primary hover:border-primary/30 transition-colors"
            aria-label={label}
          >
            <Icon name={icon} class="w-5 h-5" />
            <span class="text-sm font-medium">{label}</span>
          </a>
        ))}
      </div>

      <p class="text-text-muted text-sm mb-8">
        Based in <strong>New York, NY</strong> &amp; <strong>Bengaluru, India</strong>
      </p>

      <p class="text-text-light text-sm">
        &copy; {currentYear} Adithya K P Bhat. All rights reserved.
      </p>
    </div>
  </div>
</footer>
