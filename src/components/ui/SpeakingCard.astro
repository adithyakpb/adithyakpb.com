---
import Card from './Card.astro';

interface Props {
  title: string;
  event: string;
  date: string;
  description: string;
  link?: string;
}

const { title, event, date, description, link } = Astro.props;
---

<Card>
  <div class="flex flex-col h-full">
    <div class="flex items-start justify-between mb-2">
      <span class="text-xs font-medium text-primary bg-primary/5 px-2 py-1 rounded">{event}</span>
      <span class="text-xs text-text-light">{date}</span>
    </div>
    <h3 class="text-lg font-semibold text-text mb-2">{title}</h3>
    <p class="text-text-muted text-sm flex-1">{description}</p>
    {link && (
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="mt-3 inline-flex items-center gap-1 text-sm text-primary hover:text-primary-dark transition-colors"
      >
        View details &rarr;
      </a>
    )}
  </div>
</Card>
