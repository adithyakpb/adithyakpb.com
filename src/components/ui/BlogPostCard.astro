---
import Card from './Card.astro';

interface Props {
  title: string;
  link: string;
  date: string;
  snippet?: string;
}

const { title, link, date, snippet } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="block">
  <Card>
    <span class="text-xs text-text-light">{date}</span>
    <h3 class="text-lg font-semibold text-text mt-1 mb-2 group-hover:text-primary transition-colors">{title}</h3>
    {snippet && <p class="text-text-muted text-sm line-clamp-2">{snippet}</p>}
    <span class="mt-3 inline-flex items-center gap-1 text-sm text-primary">
      Read on blog &rarr;
    </span>
  </Card>
</a>
