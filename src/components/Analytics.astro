---
const isProd = import.meta.env.PROD;
const GA_ID = 'G-VCY9E2VVPS';
---

{isProd && (
  <script is:inline define:vars={{ GA_ID }}>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());
    gtag('config', GA_ID);
  </script>
  <script is:inline src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`} async></script>
)}
