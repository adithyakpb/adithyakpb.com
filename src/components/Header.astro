---
const navLinks = [
  { href: '#about', label: 'About' },
  { href: '#work', label: 'Work' },
  { href: '#timeline', label: 'Timeline' },
  { href: '#speaking', label: 'Speaking' },
  { href: '#github', label: 'GitHub' },
  { href: '#blog', label: 'Blog' },
  { href: '#contact', label: 'Contact' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-border">
  <nav class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
    <a href="/" class="text-lg font-semibold text-text hover:text-primary transition-colors">
      Adithya KP
    </a>

    <!-- Desktop nav -->
    <ul class="hidden md:flex items-center gap-6">
      {navLinks.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class="text-sm text-text-muted hover:text-primary transition-colors"
          >
            {label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile menu button -->
    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 text-text-muted hover:text-text transition-colors"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-b border-border">
    <ul class="px-4 py-4 space-y-3">
      {navLinks.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class="mobile-nav-link block text-sm text-text-muted hover:text-primary transition-colors"
          >
            {label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn')!;
  const menu = document.getElementById('mobile-menu')!;
  const icon = document.getElementById('menu-icon')!;

  btn.addEventListener('click', () => {
    const isOpen = !menu.classList.contains('hidden');
    menu.classList.toggle('hidden');
    btn.setAttribute('aria-expanded', String(!isOpen));
    icon.setAttribute('d', isOpen
      ? 'M4 6h16M4 12h16M4 18h16'
      : 'M6 18L18 6M6 6l12 12'
    );
  });

  // Close mobile menu when clicking a link
  document.querySelectorAll('.mobile-nav-link').forEach(link => {
    link.addEventListener('click', () => {
      menu.classList.add('hidden');
      btn.setAttribute('aria-expanded', 'false');
      icon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
    });
  });
</script>
