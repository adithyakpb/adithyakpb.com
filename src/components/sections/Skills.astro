---
import SectionHeading from '@/components/ui/SectionHeading.astro';
import SkillChip from '@/components/ui/SkillChip.astro';
import ScrollReveal from '@/components/ScrollReveal.astro';
import { skillGroups } from '@/data/skills';
---

<section id="skills" class="py-20 bg-surface">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <ScrollReveal>
      <SectionHeading
        title="What I Do"
        subtitle="Core competencies across AI/ML, infrastructure, and software engineering"
      />
    </ScrollReveal>

    <div class="grid sm:grid-cols-2 gap-8">
      {skillGroups.map((group, i) => (
        <ScrollReveal delay={i * 100}>
          <div class="bg-card rounded-xl border border-border p-6">
            <h3 class="text-lg font-semibold text-text mb-4" style={`color: ${group.color}`}>
              {group.category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {group.skills.map((skill) => (
                <SkillChip label={skill} color={group.color} />
              ))}
            </div>
          </div>
        </ScrollReveal>
      ))}
    </div>
  </div>
</section>
