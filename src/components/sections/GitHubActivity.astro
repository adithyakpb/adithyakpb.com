---
import SectionHeading from '@/components/ui/SectionHeading.astro';
import ScrollReveal from '@/components/ScrollReveal.astro';

const username = 'adithyakpb';
const accent = '1e40af';

const statsUrl = `https://github-readme-stats.vercel.app/api?username=${username}&show_icons=true&hide_border=true&bg_color=ffffff&title_color=${accent}&icon_color=${accent}&text_color=1e293b&hide=contribs&hide_rank=true`;
const langsUrl = `https://github-readme-stats.vercel.app/api/top-langs?username=${username}&layout=compact&hide_border=true&bg_color=ffffff&title_color=${accent}&text_color=1e293b&langs_count=8`;
const chartUrl = `https://ghchart.rshah.org/${accent}/${username}`;
---

<section id="github" class="py-20 bg-surface">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <ScrollReveal>
      <SectionHeading
        title="GitHub Activity"
        subtitle="Open-source contributions and coding activity"
      />
    </ScrollReveal>

    <div class="space-y-8">
      <!-- Contribution chart -->
      <ScrollReveal>
        <div class="bg-white rounded-xl border border-border p-6 overflow-x-auto">
          <img
            src={chartUrl}
            alt={`${username}'s GitHub contribution chart`}
            class="w-full min-w-[700px]"
            loading="lazy"
          />
        </div>
      </ScrollReveal>

      <!-- Stats cards -->
      <div class="grid md:grid-cols-2 gap-6">
        <ScrollReveal delay={100}>
          <div class="bg-white rounded-xl border border-border p-6 flex items-center justify-center">
            <img
              src={statsUrl}
              alt={`${username}'s GitHub stats`}
              loading="lazy"
              class="max-w-full"
            />
          </div>
        </ScrollReveal>
        <ScrollReveal delay={200}>
          <div class="bg-white rounded-xl border border-border p-6 flex items-center justify-center">
            <img
              src={langsUrl}
              alt={`${username}'s top languages`}
              loading="lazy"
              class="max-w-full"
            />
          </div>
        </ScrollReveal>
      </div>
    </div>
  </div>
</section>
